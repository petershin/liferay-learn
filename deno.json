{
	"compilerOptions": {
		"allowJs": true,
		"lib": ["deno.window"],
		"strict": true
	},
	"lint": {
		"include": ["src/"],
		"exclude": ["src/testdata/", "data/fixtures/**/*.ts"],
		"rules": {
			"tags": ["recommended"],
			"include": ["ban-untagged-todo"],
			"exclude": ["no-unused-vars"]
		}
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 0,
		"indentWidth": 4,
		"semiColons": false,
		"singleQuote": true,
		"proseWrap": "preserve",
		"include": ["src/"],
		"exclude": ["src/testdata/", "data/fixtures/**/*.ts"]
	},
	"lock": false,
	"nodeModulesDir": true,
	"npmRegistry": "https://mycompany.net/artifactory/api/npm/virtual-npm",
	"test": {
		"include": ["src/"],
		"exclude": ["src/testdata/", "data/fixtures/**/*.ts"]
	},
	"tasks": {
		"start": "deno run --allow-read main.ts"
	},
	"imports": {
		"oak": "https://deno.land/x/oak@v12.4.0/mod.ts"
	}
}
